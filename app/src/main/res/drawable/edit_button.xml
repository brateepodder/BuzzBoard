<!-- edit_button_with_lines.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Background circle -->
    <item android:drawable="@drawable/button_background" />


    <!-- Top line -->
    <item
        android:drawable="@drawable/ic_line_top"
        android:gravity="center" />

    <!-- Middle line -->
    <item
        android:drawable="@drawable/ic_line_middle"
        android:gravity="center" />

    <!-- Bottom line -->
    <item
        android:drawable="@drawable/ic_line_bottom"
        android:gravity="center" />

</layer-list>
